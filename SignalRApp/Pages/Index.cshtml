                    <option value="1" id="deployBtn" disabled>DeployPayload</option>
                    <option value="2" id="deorbitBtn" disabled>Deorbit</option>
                    <option value="3" id="startTlmBtn" disabled>StartTelemetry</option>
                    <option value="3" id="stopTlmBtn" disabled>StopTelemetry</option>
                </select>
                </div>
                <div class="col-auto">
                <button type="submit" class="btn btn-primary" id="cmd_btn" disabled>Send</button>
                </div>
            </form>
        </div>

        <br />
        <div >
            <label for="Textarea1" class="form-label">Command History</label>
            <textarea class="form-control" id="cmdHistory" style="max-width:60%;height:100%;width:60%;" rows="4" readonly></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

