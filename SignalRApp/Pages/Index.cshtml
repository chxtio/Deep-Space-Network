@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Deep Space Network</h1>
</div>
<div>
    <label class="checkbox-inline">
        <input type="checkbox" id="chkRed" name="chkColor" data-lightColor="Red" data-toggle="toggle" data-onstyle="danger" data-offstyle="danger">
        <span style="padding-right: 40px;">Red</span>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" id="chkGreen" name="chkColor" data-lightColor="Green" data-toggle="toggle" data-onstyle="success" data-offstyle="success">
        <span style="padding-right: 40px;">Green</span>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" id="chkBlue" name="chkColor" data-lightColor="Blue" data-toggle="toggle" data-onstyle="primary" data-offstyle="primary">
        <span style="padding-right: 40px;">Blue</span>
    </label>
</div>
<h4 id="messageCount">0</h4>
<ul id="messages" style="overflow: auto; max-height: 600px;">
</ul>


<!----------Launch Table-------------------------------------------------------------------------------->
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col" colspan="4" style="text-align:center">Launches</th>
    </tr>
  </thead>
  <thead>
    <tr>
      <th scope="col" style="text-align:center"></th>
      <th scope="col">Launch Vehicle</th>
      <th scope="col">Status</th>
      <th scope="col">View Data</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Bird-9</td>
      <td>Launched</td>
      <td>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  View
</button>
</td>
      @*<td><a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">View</a></td>*@
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Bird-Heavy</td>
      <td>Upcoming</td>
      <td>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" disabled>
  View
</button>
          @*<a href="#" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">View</a>*@
</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>Hawk-Heavy</td>
      <td>Upcoming</td>
      <td>
          @*<button type="button" class="btn btn-lg btn-primary" disabled>View</button>*@
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" disabled>
  View
</button>
          </td>
    </tr>
  </tbody>
</table>



@*<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>*@

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Telemetry Viewer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
            <!----------Telemetry Table-------------------------------------------------------------------------------->
            <table class="table table-striped table-hover">
@*              <thead>
                <tr>
                  <th scope="col" colspan="2" style="text-align:center">Telemetry Data</th>
                </tr>
              </thead>*@
              <tbody>
                <tr>
                  <th scope="row">Altitude</th>
                  <td id="altitude"></td>
                </tr>
                <tr>
                  <th scope="row">Longitude</th>
                  <td id="longitude"></td>
                </tr>
                <tr>
                  <th scope="row">Latitude</th>
                  <td colspan="2" id="latitude"></td>
                </tr>
                <tr>
                  <th scope="row">Temperature</th>
                  <td colspan="2" id="temperature"></td>
                </tr>
                <tr>
                  <th scope="row">Time to Orbit</th>
                  <td colspan="2" id="time_to_orbit"></td>
                </tr>
                <tr>
                  <th scope="row">Time Formatted</th>
                  <td colspan="2" id="time_formatted"></td>
                </tr>
              </tbody>
            </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
        @*<button type="button" class="btn btn-primary">Save changes</button>*@
      </div>
    </div>
  </div>
</div>

@section scripts {
<script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/messagebroker.js"></script>
@*<script src="https://code.jquery.com/jquery-3.5.0.js"></script>*@
}