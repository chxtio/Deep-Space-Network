<!----------Launch Table-------------------------------------------------------------------------------->
<table id="launch_table" > <!---class="table table-hover table-dark"-->
  <thead>
    <tr>
      <th scope="col" colspan="8" style="text-align:center">Launches</th>
    </tr>
  </thead>
  <thead>
    <tr>
      <th scope="col" style="text-align:center"></th>
      <th scope="col">Launch Vehicle</th>
      <th scope="col">Launch Status</th>
      <th scope="col">Telemetry</th>
      <th scope="col">Payload Status</th>
      <th scope="col">Telemetry/Data</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td >Bird-9</td>
      <td id="status1">
          <span class="success">Launched</span>
      </td>
      <td>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal1">View
          </button>
      </td>
      <td class="deploy-status open">
          Ready to Deploy
      </td>
      <td>
         <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal1p">View</button>
      </td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Bird-Heavy</td>
      <td id="status2">
          <span class="success">Launched</span>
      </td>
      <td>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal2" >View</button>
      </td>
      <td class="deploy-status in-progress">
          In Progress
      </td>
      <td>
         <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal2p">View</button>
      </td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>Hawk-Heavy</td>
      <td id="status3" class="launch_status_cell">
          <span class="not-launched">Upcoming</span>
      </td>
      <td>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal3">View</button>
      </td>
      <td class="deploy-status offline">
          N/A
      </td>
      <td>
         <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal1p">View</button>
      </td>
    </tr>
  </tbody>
</table>



