<!-- Modal1 -->
<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel1">Telemetry Viewer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
            <!----------Telemetry Table-------------------------------------------------------------------------------->
            <table class="table table-striped table-hover">
@*              <thead>
                <tr>
                  <th scope="col" colspan="2" style="text-align:center">Telemetry Data</th>
                </tr>
              </thead>*@
              <tbody>
                <tr>
                  <th scope="row">Altitude</th>
                  <td id="altitude1"></td>
                </tr>
                <tr>
                  <th scope="row">Longitude</th>
                  <td id="longitude1"></td>
                </tr>
                <tr>
                  <th scope="row">Latitude</th>
                  <td colspan="2" id="latitude1"></td>
                </tr>
                <tr>
                  <th scope="row">Temperature</th>
                  <td colspan="2" id="temperature1"></td>
                </tr>
                <tr>
                  <th scope="row">Time to Orbit</th>
                  <td colspan="2" id="time_to_orbit1"></td>
                </tr>
                <tr>
                  <th scope="row">Time Formatted</th>
                  <td colspan="2" id="time_formatted1"></td>
                </tr>
              </tbody>
            </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
        @*<button type="button" class="btn btn-primary">Save changes</button>*@
      </div>
    </div>
  </div>
</div>

